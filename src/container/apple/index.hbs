<div class="page">

  {{#with header}}
  <div class="header">
    <header class="header_content">
      <div class="header_block">
        <a href="/apple">
          <img src="/svg/apple.svg" alt="Aplue" class="header_icon">
        </a>
        <nav class="header_block">
          {{#each links}}
          <a href="{{url}}" class="header_link">{{text}}</a>
          {{/each}}
        </nav>
      </div>
      <div class="header_block">
        <img src="/svg/search.svg" alt="Aplue" class="header_icon">
        <img src="/svg/profile.svg" alt="Aplue" class="header_icon">
      </div>
    </header>
  </div>
  {{!-- ======================================================= --}}
  {{#with ad}}
  <div class="ad">
    <div class="header_content">
      <div class="header_block">
        <span class="test">{{title}}</span>
      </div>

      {{#with link}}
      <a href="{{url}}">{{text}} ></a>
      {{/with}}

    </div>
  </div>

  {{!-- ============================================================= --}}
  {{/with}}
  {{/with}}



  {{#with iphone_pro}}
  <section class="product product-big product--iphone-pro product--dark product--top">
    <div class="product_content">
      <h1 class="product_title">{{title}}</h1>
      <p class="product_description">{{descriptions}}</p>
      <div class="product_action">
        {{#with link}}
        {{#each text}}
        <a href="{{../link}}" class="product_link">{{this}}</a>
        {{/each}}
        {{/with}}
      </div>
    </div>
  </section>
  {{/with}}

